<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="786.0" prefWidth="1253.0" spacing="20" style="-fx-padding: 30;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.azs.controllers.SalesController">

    <!-- Заголовок и фильтры -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label style="-fx-font-size: 36px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" text="Последние продажи" />
        <HBox alignment="CENTER_LEFT" spacing="15" HBox.hgrow="ALWAYS" />
    </HBox>

    <!-- Таблица продаж -->
    <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-border-radius: 10;">
        <TableView fx:id="salesTable" prefHeight="400" style="-fx-border-width: 0; -fx-font-size: 14;">
            <columns>
                <TableColumn fx:id="timeColumn" prefWidth="150" text="Дата и время" />
                <TableColumn fx:id="fuelColumn" prefWidth="100" text="Топливо" />
                <TableColumn fx:id="litersColumn" prefWidth="80" text="Литры" />
                <TableColumn fx:id="amountColumn" prefWidth="100" text="Сумма" />
                <TableColumn fx:id="paymentColumn" prefWidth="120" text="Оплата" />
                <TableColumn fx:id="statusColumn" prefWidth="80" text="Статус" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>

    <!-- Статистика и кнопки -->
    <HBox alignment="CENTER" spacing="30" style="-fx-padding: 10;">
        <VBox alignment="CENTER" spacing="5">
            <Label style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;" text="Итого за сегодня:" />
            <Label fx:id="totalSalesLabel" style="-fx-font-size: 24px; -fx-text-fill: #e67e22; -fx-font-weight: bold;" text="0 транзакций" />
        </VBox>

        <VBox alignment="CENTER" spacing="5">
            <Label style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;" text="Общая сумма:" />
            <Label fx:id="totalRevenueLabel" style="-fx-font-size: 24px; -fx-text-fill: #27ae60; -fx-font-weight: bold;" text="0.00 BYN" />
        </VBox>

        <VBox alignment="CENTER" spacing="5">
            <Label style="-fx-font-size: 16px; -fx-text-fill: #2c3e50;" text="Всего литров:" />
            <Label fx:id="totalLitersLabel" style="-fx-font-size: 24px; -fx-text-fill: #3498db; -fx-font-weight: bold;" text="0.0 л" />
        </VBox>
    </HBox>

    <!-- Кнопки управления -->
    <HBox alignment="CENTER" spacing="20">
        <Button fx:id="newSaleButton" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 25; -fx-background-radius: 8; -fx-pref-width: 180;" text="➕ Новая продажа" />
    </HBox>
</VBox>
