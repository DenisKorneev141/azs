        <Label style="-fx-font-size: 30; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="⛽ Добавить новую колонку" />
        <Label style="-fx-font-size: 18px; -fx-text-fill: #7f8c8d;" text="Поддерживаемые виды топлива: АИ-92, 95, 98, 100, ДТ-К5" />
        <Button fx:id="addNozzleButton" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-padding: 12 25; -fx-background-radius: 8;" text="Добавить колонку" />
    </VBox>
