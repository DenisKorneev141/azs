            <Label style="-fx-font-size: 18px; -fx-text-fill: #7f8c8d;" text="ДТ-К5" />
            <Button fx:id="nozzle1QrButton" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-padding: 8 15; -fx-background-radius: 6;" text="QR-код" />
            <Button fx:id="nozzle1ToggleButton" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 8 15; -fx-background-radius: 6;" text="Загрузка..." />
        </VBox>

